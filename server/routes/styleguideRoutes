const express = require("express");
const styleguideController = require("./../controllers/styleguideController");
const userController = require("./../controllers/userController");
const categoryController = require("./../controllers/categoryController");
const dbConnectionMiddleware = require("./../middleware/dbConnection");

const router = express.Router();

router.use(dbConnectionMiddleware);
//  .get(userController.verifyUser, styleguideController.getAllStyleGuides)
router
  .route("/")
  .get(userController.verifyUser, styleguideController.getAllStyleGuides)
  .post(styleguideController.createStyleGuides);

router.route("/:id").get(styleguideController.getStyleGuide);
router.route("/:id/categories").post(categoryController.createCategory);
router.use((req, res, next) => {
  if (req.dbConnection) {
    req.dbConnection.release();
  }
  next();
});

module.exports = router;
