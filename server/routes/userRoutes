const express = require("express");
const userController = require("./../controllers/userController");
const dbConnectionMiddleware = require("./../middleware/dbConnection");

const router = express.Router();

router.use(dbConnectionMiddleware);

router.route("/login").post(userController.login).get(userController.getLogin);
router.route("/logout").get(userController.logout);
router
  .route("/")
  .get(userController.getAllUsers)
  .post(userController.verifyNotLoggedIn, userController.createUser);

router.use((req, res, next) => {
  if (req.dbConnection) {
    req.dbConnection.release();
  }
  next();
});

module.exports = router;
